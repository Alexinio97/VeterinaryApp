<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="#2c3e50">
        <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                app:cardPreventCornerOverlap="false"
                android:layout_marginStart="100dp">
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/petProfilePhoto"/>
            </android.support.v7.widget.CardView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:background="#7777">
        
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:id="@+id/pet_name_text"
            android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Age:"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:id="@+id/pet_age_txt"
                android:layout_marginStart="190dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp">
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Neutered:"
                android:layout_marginStart="20dp"
                android:id="@+id/pet_neutered_text"
                android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Species:"
                    android:layout_marginTop="40dp"
                    android:textSize="20dp"
                    android:layout_marginStart="20dp"
                    android:id="@+id/pet_breed_txt"
                    android:textAlignment="center"/>
            </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:text="Make an appointment"
            android:id="@+id/btn_MakeAppointment"
            android:backgroundTint="#4c75ae"
            android:drawableLeft="@drawable/calendar"/>
        <Button
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:text="View appointment history"
            android:id="@+id/btn_AppointmentHistory"
            android:backgroundTint="#4c75ae"
            android:drawableLeft="@drawable/event"/>
    </RelativeLayout>
    
</LinearLayout>