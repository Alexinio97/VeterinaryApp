
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mobilebackgroundphoto"
    android:id="@+id/signUp_view">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creare cont nou"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7FFF"
        android:layout_margin="40dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
           >
        <EditText  
            android:hint="Prenume"  
            android:id="@+id/txt_firstName"  
            android:inputType="text"  
            android:layout_width="130dp"  
            android:layout_height="match_parent"/>
        <EditText
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:hint="Nume"
            android:layout_marginLeft="40dp"
            android:inputType="text"
            android:id="@+id/txt_lastName"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/email"
            android:id="@+id/txt_email"
            android:drawablePadding="2dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Parola"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/lock"
            android:id="@+id/txt_password"
            android:drawablePadding="2dp"/>
         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Telefon"
             android:inputType="phone"
             android:id="@+id/txt_phone"
             android:drawableLeft="@drawable/phone"/>
        <Button
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content" android:text="Inregistreaza-te" android:id="@+id/SignUp_btn"
            android:layout_gravity="bottom" android:layout_marginStart="40dp" android:layout_marginEnd="40dp" android:backgroundTint="#4c75ae"
            android:textStyle="bold"/>
    </LinearLayout>
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aveti deja un cont? Autentifica-te"
        android:textSize="15dp"
        android:layout_marginTop="380dp"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Autentificare"
        android:backgroundTint="#4c75ae"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="400dp"
        android:id="@+id/toLogin_btn"/>
</RelativeLayout>